extends layouts/login-layout.pug

block content
    .loginContainer
        i.fa-brands.fa-twitter
        h1 Login 
        form(method="POST")
            p.errorMsg #{error}
            input(type="text", name="logUser", placeholder="Username or Email", required="")
            input(type="password", name="logUserPassword", placeholder="Password", required="")
            input(type="submit", value="Login")
        a(href="/register") Need an account? Register here.
    